<script type="text/ng-template" id="/login.html">
		<div class="login-wrap">
		<div class="container">
			<div class="row">
				<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
				  <div ng-show="error" class="alert alert-danger row">
				    <span>{{ error.message }}</span>
				  </div>

				  <form ng-submit="logIn()" name="loginForm">
				    <img src="images/pages-logo-dark.png" alt="" class="login-img img-responsive"/>
				    <img src="images/analogo.svg" alt="" class="ana-img img-responsive"/>
				    <div class="form-group">
				       <label for="email">Usuario</label>
				      <input style="font-size:30px;height:auto;" type="text" name="email"
				      class="form-control"
				      ng-model="user.username" ng-disabled="isFormSubmited" required></input>
				    </div>
				    <div class="form-group">
				      <label for="password">Contraseña</label>
				      <input style="font-size:30px;height:auto;margin-bottom:15px;" type="password" name="password"
				      class="form-control"
				      ng-model="user.password" ng-disabled="isFormSubmited" required></input>
				    </div>
				    <h6 ng-show="isFormSubmited" class="text-center" style="position: absolute;width: 100%;margin-left: -15px;"><i class="fa fa-spinner fa-spin"></i></h6>
				    <button type="submit" class="btn btn-primary" ng-disabled="loginForm.$valid && isFormSubmited">Iniciar Sesión</button>
                      <p align="center" style="font-size:9px">(v.2.3.7)</p>
				    <a href="#/register">¿No tiene cuenta?</a>
				    <a href="#/forgotpassword">Cambia la contraseña</a>
    				<small><a href="#/politicas">Política de uso y privacidad</a></small>
				    <div class="row signature">
					    <div class="col-xs-6">
						     <img src="images/USAIDLOGO.png" alt="" class="login-usaid img-responsive"/>
					    </div>
					    <div class="col-xs-6">
						    <p>Programa Regional de Cambio Climático </p>
					    </div>
					</div>
				  </form>
				</div>
			</div>
		</div>
	</div>
	  </script>
