<script type="text/ng-template" id="/varieties.html">
	     <div class="container-fluid roya-wrap">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Variedades de Cafe
                        </h1>
                        
						<div class="col-md-6">
							<form ng-submit="addNew()">
							  <div class="form-group">
							<p class="text-center" ng-hide="varieties">
							    <i class="fa fa-circle-o-notch fa-spin"></i>
							</p>
                  	<p class="text-center" ng-show="isprocessing">
							    <i class="fa fa-circle-o-notch fa-spin"></i>
							</p>
                
							    <ul class="list-group">
									  <li class="list-group-item" ng-repeat="variety in varieties">
                      <span ng-show="!variety.isEditing">{{ variety.name }}</span>  
                      <a class="btn btn-danger pull-right btn-xs" ng-show="!variety.isEditing" ng-click="deleteVariety(variety._id, $index)">
                        <i class="fa fa-trash"></i>
                      </a>
                    <a class="btn btn-primary pull-right btn-xs" ng-show="!variety.isEditing" ng-click="variety.isEditing = true" style="margin-right: 10px;">
                        <i class="fa fa-pencil"></i>
                      </a>

                      <input ng-show="variety.isEditing" type="text" ng-model="variety.name" style="width: 80%;"></input>

                  <a class="btn btn-info pull-right btn-xs" ng-show="variety.isEditing" ng-click="variety.isEditing = false;variety.name = variety.original;">
                    <i class="fa fa-times"></i>
                  </a>
                    
                    <a class="btn btn-success pull-right btn-xs" ng-show="variety.isEditing" ng-click="updateVariety(variety)" style="margin-right: 10px;">
                        <i class="fa fa-check"></i>
                      </a>
                    
                  </li>
									  
								</ul>
							    							  
							  </div>
							  <div class="form-group">
							    
							    <input type="text" class="form-control" id="exampleInputName2" placeholder="Variedad" ng-model="newVariety">
							  </div>
							  <button type="submit" class="btn btn-default">Agregar nueva</button>
							</form>
						</div>
						        
						
            
            </div>
                </div>
        </div>
    </script>

    